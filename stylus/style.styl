@import url('https://fonts.googleapis.com/css?family=Overpass:400,700&display=swap');

very-dark-blue = hsl(216, 12%, 8%)
dark-blue = hsl(213, 19%, 18%)
medium-grey = hsl(216, 12%, 54%)
light-grey = hsl(217, 12%, 63%)
orange = hsl(25, 97%, 53%)

flex-display(args)
  display flex
  flex-direction args

*
  box-sizing border-box

body
  background-color very-dark-blue
  color white
  flex-display column
  min-height 100vh
  align-items center
  justify-content center

form
  font-family 'Overpass', sans-serif
  h1
    font-size 26px
    margin-bottom 0
  p
    font-size 15px
    margin-bottom 1.5em
    color light-grey
  input
    font-family inherit
    border none
  input[type="submit"]
    background-color orange
    padding 1em 1em 1em 1em
    border-radius 20px
    color white
    letter-spacing 0.2em

.rating-form
  flex-display column
  justify-content center
  background linear-gradient(45deg, very-dark-blue, dark-blue);
  border-radius 15px
  padding 1.5em;
  margin 0.5em

for num in 1 2 3 4 5
  #rating-{num}
    font-size 14px
    padding-top 0.25em
    color hsl(217, 12%, 63%)
    height 3em
    width 3em
    background-color dark-blue
    border-radius 50%

.ratings
  flex-display row
  justify-content space-between
  align-items center
  padding-bottom 1em

.attribution
  font-size 11px
  text-align center
  a
    color hsl(228, 45%, 44%)