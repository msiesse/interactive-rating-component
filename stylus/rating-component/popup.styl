@import 'functions'
@import 'variables'

.box
  font-family 'Overpass', sans-serif
  flex-display column
  justify-content center
  background radial-gradient(circle 450px at top, dark-blue, very-dark-blue)
  border-radius 25px
  padding 1.75em
  margin 0.5em
  max-width 380px

.border-star
  flex-center row
  background-color dark-blue
  border-radius 50%
  width 2.75em
  height 2.75em
  margin-bottom 1em

.rating-value
  font-size 15px
  padding-top 0.25em
  color hsl(217, 12%, 63%)
  height 3em
  width 3em
  background-color dark-blue
  border-radius 50%

.rating-value:focus
  background-color: light-grey
  color: white

.rating-value:hover
  background-color: orange
  color: white

.ratings
  flex-display row
  justify-content space-between
  align-items center
  padding-bottom 1.5em

#thank-you-page
  display none
  padding 2.5em
  max-width 420px

.thank-you
  align-items center
  text-align: center

  img
    max-width 100%
    height auto
    margin-bottom: 2em

.rating-selected-text
  flex-center row
  background-color dark-blue
  border-radius 25px
  height: 30px
  width: 185px
  margin-bottom 1.25em
  p
    color orange
    padding-top: 0.75em

.attribution
  font-size 11px
  text-align center

  a
    color hsl(228, 45%, 44%)